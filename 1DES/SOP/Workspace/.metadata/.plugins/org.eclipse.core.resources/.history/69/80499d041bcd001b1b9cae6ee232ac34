package visao;

import java.util.ArrayList;
import java.util.Scanner;

public class TelaViagens {
	public static int menu = 0; /*Atributo primitivo, não precisa do new*/
	public static Scanner leia = new Scanner(System.in); /*Objeto instanciado*/
	public static ArrayList<String> viagens; 

	public static void main(String[] args) {
		viagens = new ArrayList<>();/*Objeto*/
		viagens.add("Paraíba");
		viagens.add("Amazonas");
		viagens.add("Alagoas");
		viagens.add("Amapá");
		viagens.add("Bahia");
		viagens.add("Espírito Santo");
		while (menu != 5) {
			menu = menu(new String[]{ "\n1.Cadastro", "2.Listar", "3.Alterar", "4.Excluir", "5.Sair\n" });
			switch(menu) {
			case 1:
				System.out.print("Digite seu destino: ");
				)
				break;
			case 2:
				for(String v: viagens) {
					System.out.println(v);
				}
				break;
			case 3:
				System.out.println("digite o índice do destino que deseja alterar");
				int indice = leia.nextInt();
				
				break;
			case 4:
				System.out.println("digite o índice do destino que deseja excluir");
				indice = leia.nextInt();
				viagens.remove(indice);
				break;
			case 5:
				System.out.println("Até mais!");
				break;
			default:
				System.out.println("Opção inválida");
				break;
			}
		}
	}

	public static int menu(String[] itens) {
		for(String i : itens) {
			System.out.println(i);
		}
		return leia.nextInt();
	}
}
