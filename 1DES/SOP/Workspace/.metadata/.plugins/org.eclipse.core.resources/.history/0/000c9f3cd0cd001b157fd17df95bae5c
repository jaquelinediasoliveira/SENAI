package visao;

import java.util.ArrayList;
import java.util.Scanner;

public class TelaViagens {
	public static int menu = 0;
	public static Scanner leia = new Scanner(System.in);
	public static ArrayList<String> viagens; 

	public static void main(String[] args) {
		viagens = new ArrayList<>();
		viagens.add("Paraíba");
		viagens.add("Amazonas");
		viagens.add("Alagoas");
		viagens.add("Amapá");
		viagens.add("Bahia");
		viagens.add("Espírito Santo");
		while (menu != 5) {
			menu = menu(new String[]{ "\n1.Cadastro", "2.Listar", "3.Alterar", "4.Excluir", "5.Sair\n" });
			switch(menu) {
			case 1:
				System.out.print("Digite um destino: ");
                viagens.add(leia.next());
				break;
			case 2:
				int i=1;
				for(String d: viagens) {
					System.out.println(i+" "+d);
					i++;
				}
				break;
			case 3:
				System.out.print("Digite o índice do destino que deseja alterar: ");
				int indice = leia.nextInt()-1;
				System.out.print("Digite um novo destino: ");
				String destino = leia.next();
				viagens.set(indice, destino);
				break;
			case 4:
				System.out.println("digite o índice do destino que deseja excluir");
				viagens.remove(leia.nextInt());
				break;
			case 5:
				System.out.println("Até mais!");
				break;
			default:
				System.out.println("Opção inválida");
				break;
			}
		}
	}

	public static int menu(String[] itens) {
		for(String i : itens) {
			System.out.println(i);
		}
		return leia.nextInt();
	}
}
